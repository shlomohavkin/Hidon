<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Game Mode"
        android:textSize="28sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>

    <!-- Descriptive Text -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Would you like to use your custom questioner or generate one automatically?"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="40dp"/>

    <!-- Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Custom Questioner Button -->
        <Button
            android:id="@+id/customQuestionerButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Use Custom Questioner"
            android:backgroundTint="#2ECC71"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:onClick="onCustomQuestionerClick"/>

        <!-- Auto-Generated Questioner Button -->
        <Button
            android:id="@+id/autoGeneratedButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Generate Questions Automatically"
            android:backgroundTint="#3498DB"
            android:textColor="#FFFFFF"
            android:elevation="4dp"
            android:onClick="onAutoGenQuestionerClick"/>
    </LinearLayout>
</LinearLayout>
