<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Centered Dialog-like Container -->
    <LinearLayout
        android:id="@+id/dialogContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="360dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_dialog_background"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a Game Mode"
            android:textSize="28sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>

        <!-- Descriptive Text -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Would you like to use your custom questioner or generate one automatically?"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Custom Questioner Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/customQuestionerButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Use Custom Questioner"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="#2ECC71"
            android:textColor="#FFFFFF"
            app:cornerRadius="18dp"
            android:layout_marginBottom="16dp"
            android:onClick="onCustomQuestionerClick"
            android:paddingVertical="5dp"/>

        <!-- Auto-Generated Questioner Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/autoGeneratedButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Generate Questions Automatically"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="#3498DB"
            android:textColor="#FFFFFF"
            app:cornerRadius="18dp"
            android:onClick="onAutoGenQuestionerClick"
            android:paddingVertical="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
