<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Game"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/title_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <!-- Decorative Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="@color/divider_color"
        android:layout_below="@id/game_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Start Button -->
    <Button
        android:id="@+id/start_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Start Game"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="200dp"
        android:onClick="onStartClickOnline"/>

    <!-- Start Button -->
    <Button
        android:id="@+id/join_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Join Game"
        android:textSize="25sp"
        android:layout_below="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="50dp"
        android:onClick="onJoinCLickOnline"/>

    <!-- Notes Game -->
    <Button
        android:id="@+id/notes_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Notes Game"
        android:textSize="25sp"
        android:layout_below="@+id/join_button"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="30dp"
        android:onClick="onNotesGameButtonClick"/>

    <Button
        android:id="@+id/start_notes_game_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Start Game"
        android:textSize="25sp"
        android:layout_below="@+id/notes_button"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:onClick="onNotesGameStart"
        android:visibility="gone"/>

    <Button
        android:id="@+id/join_notes_game_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Join Game"
        android:textSize="25sp"
        android:layout_below="@+id/start_notes_game_button"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:onClick="onNotesGameJoin"
        android:visibility="gone"/>

    <Button
        android:id="@+id/create_questions_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Create Questions"
        android:textSize="25sp"
        android:layout_below="@+id/join_notes_game_button"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:onClick="onNotesCreateClick"
        android:visibility="gone"/>



    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25sp"
        android:textColor="@color/footer_color"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/create_questions_button"
        android:layout_marginTop="40dp" />

    <!-- Footer TextView -->
    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to test your knowledge?"
        android:textSize="25sp"
        android:textColor="@color/footer_color"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp" />
</RelativeLayout>
