<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz Game"
            android:textSize="52sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:letterSpacing="0.05"/>

        <View
            android:id="@+id/divider"
            android:layout_width="120dp"
            android:layout_height="4dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerSection"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:paddingBottom="32dp">

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1v1 Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1v1 Challenge"
                android:textSize="24sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Start Game"
                android:textSize="22sp"
                app:cornerRadius="15dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#007BFF"
                android:onClick="onStartClickOnline"
                android:layout_marginBottom="16dp"/>

            <!-- Hidden Waiting Popup -->
            <LinearLayout
                android:id="@+id/waiting_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting for another player..."
                    android:textSize="20sp"
                    android:textColor="#4d4c4c"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/join_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Join Game"
                android:textSize="22sp"
                app:cornerRadius="15dp"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#0056b3"
                app:strokeWidth="3dp"
                android:textColor="#0056b3"
                android:onClick="onJoinCLickOnline"
                android:layout_marginBottom="32dp"/>

            <!-- Multiplayer Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multiplayer Quiz"
                android:textSize="24sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/notes_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Notes Game"
                android:textSize="22sp"
                app:cornerRadius="15dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#007BFF"
                android:onClick="onNotesGameButtonClick"/>

            <!-- Hidden Notes Game Options -->
            <LinearLayout
                android:id="@+id/notes_game_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/start_notes_game_button"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Start Game"
                    android:textSize="22sp"
                    app:cornerRadius="15dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#007BFF"
                    android:onClick="onNotesGameStart"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/join_notes_game_button"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Join Game"
                    android:textSize="22sp"
                    app:cornerRadius="15dp"
                    android:backgroundTint="#FFFFFF"
                    app:strokeColor="#0056b3"
                    app:strokeWidth="3dp"
                    android:textColor="#0056b3"
                    android:onClick="onNotesGameJoin"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/create_questions_button"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Create Questions"
                    android:textSize="22sp"
                    app:cornerRadius="15dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#28A745"
                    android:onClick="onNotesCreateClick"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to test your knowledge?"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"/>
</RelativeLayout>