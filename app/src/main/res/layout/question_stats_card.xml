<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="0dp"
    android:layout_marginLeft="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="0dp">

        <!-- General Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvResponseCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Responses: 0/7 players"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tvAverageTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Average response time: 0.00s"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Question Title -->
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1: What is the capital of France?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="8dp" />

        <!-- Answer Distribution Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer Distribution"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <!-- Option A -->
                <LinearLayout
                    android:id="@+id/answer1Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvAnswer1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Option A"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvPercentA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 (0%)"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBarA"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progressTint="@color/option_a"
                        android:progressBackgroundTint="@color/progress_background"
                        android:progress="0" />
                </LinearLayout>

                <!-- Option B -->
                <LinearLayout
                    android:id="@+id/answer2Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvAnswer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Option B"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvPercentB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 (0%)"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBarB"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progressTint="@color/option_b"
                        android:progressBackgroundTint="@color/progress_background"
                        android:progress="0" />
                </LinearLayout>

                <!-- Option C -->
                <LinearLayout
                    android:id="@+id/answer3Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvAnswer3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Option C"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvPercentC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 (0%)"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBarC"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progressTint="@color/option_c"
                        android:progressBackgroundTint="@color/progress_background"
                        android:progress="0" />
                </LinearLayout>

                <!-- Option D -->
                <LinearLayout
                    android:id="@+id/answer4Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvAnswer4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Option D"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvPercentD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 (0%)"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBarD"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progressTint="@color/option_d"
                        android:progressBackgroundTint="@color/progress_background"
                        android:progress="0" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>