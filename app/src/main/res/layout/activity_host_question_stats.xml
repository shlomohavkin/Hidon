<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/main">


    <TextView
        android:id="@+id/tvResponseCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="22sp"
        android:text="Responses: 5/7 players" />

    <TextView
        android:id="@+id/tvAverageTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="22sp"
        android:text="Average response time: 5.7s" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Answer Distribution"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Option A -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option A:"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" />

        <ProgressBar
            android:id="@+id/progressBarA"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="0" />

        <TextView
            android:id="@+id/tvPercentA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 (0%)"
            android:textSize="20sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Option B -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option B:"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" />

        <ProgressBar
            android:id="@+id/progressBarB"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="0" />

        <TextView
            android:id="@+id/tvPercentB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 (0%)"
            android:textSize="20sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Option C -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option C:"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" />

        <ProgressBar
            android:id="@+id/progressBarC"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="0" />

        <TextView
            android:id="@+id/tvPercentC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 (0%)"
            android:textSize="20sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Option D -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option D:"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" />

        <ProgressBar
            android:id="@+id/progressBarD"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="0" />

        <TextView
            android:id="@+id/tvPercentD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 (0%)"
            android:textSize="20sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>