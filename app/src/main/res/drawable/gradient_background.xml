<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Gradient -->
    <item>
        <shape>
            <gradient
                android:startColor="#B0D0FF"
                android:endColor="#FFFFFF"
                android:angle="270" />
        </shape>
    </item>

    <!-- Pattern Overlay (optional) -->
    <item>
        <bitmap
            android:src="@drawable/pattern"
            android:gravity="fill"/>
    </item>
</layer-list>
